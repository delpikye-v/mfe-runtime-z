    "microfrontend",
    "mfe",
    "micro-fe",

    "module-federation",
    "webpack-module-federation",
    "vite-federation",

    "runtime",
    "runtime-loader",
    "dynamic-runtime",
    "micro-frontend-runtime",
    "mfe-runtime",

    "framework-agnostic",
    "framework-independent",
    "cross-framework",

    "react",
    "vue",
    "angular",
    "svelte",

    "event-bus",
    "global-event-bus",
    "cross-app-events",

    "shared-state",
    "global-state",
    "state-sync",
    "state-sharing",

    "router-sync",
    "route-sync",
    "cross-app-routing",

    "isolation",
    "sandbox",
    "js-sandbox",

    "lazy-load",
    "dynamic-import",
    "remote-module",

    "frontend-architecture",
    "frontend-platform",
    "frontend-infrastructure",

    "monorepo",
    "polyrepo",

    "enterprise-frontend",
    "scalable-frontend",
    "large-scale-app"
